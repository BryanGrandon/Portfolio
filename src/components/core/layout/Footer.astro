---
import { NAVIGATION } from '../../../utils/constants/navigation'
import { WEBSITE_SOCIAL } from '../../../utils/constants/website'
import IconGithub from '../icons/IconGithub'
import IconLinkedin from '../icons/IconLinkedin'
import LinkIcon from '../ui/LinkIcon.astro'
---

<footer class='bg-gray-300/40 dark:bg-black/40 border-t-2 border-primary backdrop-blur-md'>
  <article class='max-w-350 mx-auto p-4 flex flex-col lg:flex-row justify-between gap-4 items-center'>
    <section class='flex flex-col gap-2'>
      <h3 class='text-xl font-basicaline font-semibold'>BG Code.</h3>
      <section>
        <ul class='flex gap-4'>
          <LinkIcon href={WEBSITE_SOCIAL.github.url} ariaLabel={WEBSITE_SOCIAL.github.ariaLabel}>
            <IconGithub size='2rem' slot='icon' />
          </LinkIcon>
          <LinkIcon href={WEBSITE_SOCIAL.linkedin.url} ariaLabel={WEBSITE_SOCIAL.linkedin.ariaLabel}>
            <IconLinkedin size='2rem' slot='icon' />
          </LinkIcon>
        </ul>
      </section>
    </section>
    <section class='flex gap-8'>
      {
        NAVIGATION.map((el) => (
          <a href={el.url} class='hover:text-primary transition-colors capitalize'>
            {el.nav}
          </a>
        ))
      }
    </section>
    <section>
      <h3 class='text-xl font-basicaline font-semibold'>Attribution</h3>
      <ul class='list-disc list-inside'>
        <li>
          Vectors and icons by vscode-icons in MIT License via{' '}
          <a href='https://svgowl.com/' target='_blank' class='text-primary underline'> SVG OWL </a>
        </li>

        <li>
          Icons by Tabler Icons under MIT License via{' '}
          <a href='https://tabler.io/icons' target='_blank' class='text-primary underline'> Tabler Icons </a>
        </li>

        <li>
          Badges by Shields.io under CC0 License via{' '}
          <a href='https://shields.io/' target='_blank' class='text-primary underline'> Shields.io </a>
        </li>
      </ul>
    </section>
  </article>
</footer>
