---
import general from '../../../content/general.json'
import { NAVIGATION } from '../../../utils/constants/navigation'
import IconGithub from '../icons/IconGithub'
import IconLinkedin from '../icons/IconLinkedin'
import LinkIcon from '../ui/LinkIcon.astro'
const { social } = general
---

<footer class='bg-gray-300/40 border-t-2 border-primary backdrop-blur-md'>
  <article class='max-w-350 mx-auto p-4 flex flex-col lg:flex-row justify-between gap-4 items-center'>
    <section class='flex flex-col gap-2'>
      <h3 class='text-xl font-basicaline font-semibold'>BG Code.</h3>
      <section>
        <ul class='flex gap-4'>
          <LinkIcon href={social.github.url} ariaLabel={social.github.ariaLabel}>
            <IconGithub size='2rem' slot='icon' />
          </LinkIcon>
          <LinkIcon href={social.linkedin.url} ariaLabel={social.linkedin.ariaLabel}>
            <IconLinkedin size='2rem' slot='icon' />
          </LinkIcon>
        </ul>
      </section>
    </section>
    <section class='flex gap-8'>
      {
        NAVIGATION.map((el) => (
          <a href={el.url} class='hover:text-secondary transition-colors capitalize'>
            {el.nav}
          </a>
        ))
      }
    </section>
    <section>
      <h3 class='text-xl font-basicaline font-semibold'>Attribution</h3>
      <p>
        Vectors and icons by vscode-icons in MIT License via{' '}
        <a href='https://svgowl.com/' target='_blank' class='text-primary underline'> SVG OWL </a>
      </p>
    </section>
  </article>
</footer>
