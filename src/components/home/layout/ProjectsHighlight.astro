---
import Title from '../../core/ui/Title.astro'
import ProjectCard from '../../core/ui/ProjectCard'
import { PROJECTS_HIGHLIGHT } from '../../../utils/constants/projects'
import { WEBSITE_PROJECTS } from '../../../utils/constants/website'
const { title, subtitle, paragraph } = WEBSITE_PROJECTS
---

<article id='projects' class='pt-12 pb-8'>
  <article class='flex flex-col gap-4 max-w-350 mx-auto py-8 px-4'>
    <Title title={title} subtitle={subtitle} />

    <section>
      {paragraph.map((text) => <p class='prose dark:prose-invert'>{text}</p>)}
    </section>
    <section class='grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-6 w-full items-stretch'>
      {PROJECTS_HIGHLIGHT.map((el) => <ProjectCard image={el.image} title={el.title} description={el.description} technologies={el.technologies} link={el.url} ariaLabel={el.ariaLabel} client:load />)}
    </section>
    <section class='flex justify-end'>
      <a href='/all_projects' class='shadow shadow-gray-800/70 px-4 py-1 rounded-lg bg-primary/40 hover:bg-primary hover:text-white hover:scale-102 active:scale-95 transition-all duration-250'>
        More Projects
      </a>
    </section>
  </article>
</article>
