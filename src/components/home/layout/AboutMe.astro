---
import general from '../../../content/general.json'
import Title from '../../home/ui/Title.astro'
const { title, subtitle, paragraph, img } = general.about
---

<article id='about' class='pt-12 pb-8'>
  <article id='about-content' class='gap-8 max-w-350 mx-auto p-4'>
    <picture style={{ gridArea: 'img' }} class='flex justify-center items-center'>
      <img src={img.url} alt={img.alt} class='block object-cover rounded-full shadow-lg shadow-gray-600/60 max-w-80' />
    </picture>

    <section style={{ gridArea: 'title' }}>
      <Title title={title} subtitle={subtitle} />
    </section>

    <section class='flex flex-col justify-center items-center lg:items-start gap-2' style={{ gridArea: 'text' }}>
      {paragraph.map((text) => <p class='prose dark:prose-invert'>{text}</p>)}
    </section>
  </article>
</article>

<style>
  #about-content {
    display: grid;
    grid-template-columns: 2fr 2fr;
    grid-template-areas:
      'img  title '
      'img  text ';
  }
  @media screen and (max-width: 1024px) {
    #about-content {
      grid-template-columns: 1fr;
      grid-template-areas:
        'title'
        'img'
        'text';
    }
  }
</style>
